{
  "name": "ffmpeg-command-architect",
  "private": true,
  "version": "1.0.0",
  "main": "dist-electron/main.mjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "vite",
    "test": "vitest run",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "build": {
    "appId": "com.ffmpeg.architect",
    "productName": "FFmpeg Command Master",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist",
      "dist-electron",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.video"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Video"
    },
    "asar": true
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "better-sqlite3": "^12.5.0",
    "i18next": "^25.7.3",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.1",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.16"
  }
}
